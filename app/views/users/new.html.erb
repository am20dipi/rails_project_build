<h1>Signup</h1>

<%= form_for(@user) do |f| %>
    
    <%= f.label :name %>
    <%= f.text_field :name %><br><br>

    <%= f.label :email %>
    <%= f.email_field :email %><br><br>

    <%= f.label :password %>
    <%= f.text_field :password %><br><br>
    <!-- we use :password instead of :password_digest to avoid storing the string -->

    <%= f.submit "Submit" %>

<% end %>