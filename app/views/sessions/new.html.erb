<h1>Log in</h1>

<%= flash[:message] if flash[:message] %><br><br>

<%= form_for :user do |f| %>

    <%= f.label :email %>
    <%= f.email_field :email %><br><br>

    <%= f.label :password %>
    <%= f.password_field :password %><br><br>
    <!-- we use :password instead of :password_digest to avoid storing the string -->

    <%= f.submit "Login" %>
<% end %>